<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".physicalfitness.yoga.Pranayam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_bhramari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_create_account"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="Bhramari Pranayam\nभ्रामरी प्राणायाम"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_Anulom_vilom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_create_account"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="Anulom Vilom Pranayam\nअनुलोम विलोम प्राणायाम"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_naadi_shodhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_create_account"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="Naadi Shodhan Pranayam\nनाड़ी शोधन प्राणायाम"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_praanakarshan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_create_account"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="Praanakarshan Pranayam\nप्राणाकर्षण प्राणायाम"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_suryabhedi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_create_account"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="Surya Bhedi Pranayam\nसूर्यभेदी प्राणायाम"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_kapaalbhati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_create_account"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:text="Kapaalbhati\nकपालभाती"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>


    </LinearLayout>
</ScrollView>