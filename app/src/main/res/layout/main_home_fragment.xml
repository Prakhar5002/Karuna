<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.MainHomeFragment"
    android:id="@+id/sliding_layout"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_layout"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/karuna_logo_1_01"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:text="Get Your Articles here"
           android:background="@color/blue_deep"
           android:textColor="@color/white"
           android:textSize="24dp"
           android:fontFamily="@font/montserrat_bold"
           android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:text="Physical Fitness Articles"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler_ph_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_marginTop="24dp"
            android:text="Mental Fitness Articles"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler_men_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:text="Spiritual Fitness Articles"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler_sp_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    </ScrollView>
   </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>